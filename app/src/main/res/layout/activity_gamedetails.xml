<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgCover"
        android:layout_width="100px"
        android:layout_height="100px"
        android:layout_alignBottom="@+id/textGameName"
        android:layout_alignParentStart="true"
        android:layout_marginStart="13dp"
        app:srcCompat="@android:color/holo_blue_bright" />

    <TextView
        android:id="@+id/textGameName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@+id/imgCover"
        android:maxLines="2"
        android:singleLine="false"
        android:text="pues la musica es mi lengua y el mundo mi familia"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textGameName"
        android:layout_below="@+id/textGameName"
        android:layout_marginStart="242dp"
        android:layout_marginTop="20dp" />

</android.widget.RelativeLayout>